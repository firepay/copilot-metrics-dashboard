# A GitHub personal access token with the necessary permissions (e.g., "read:org", "read:enterprise")
GITHUB_TOKEN=your-github-token

# The scope of the GitHub API to use. Can be "enterprise" or "organization". Defaults to "organization".
GITHUB_API_SCOPE=organization

# The version of the GitHub API to use.
GITHUB_API_VERSION=2022-11-28

# The base URL of the GitHub API. Defaults to "https://api.github.com/".
GITHUB_API_BASEURL=https://api.github.com/

# Azure Cosmos DB settings
# The connection string for your Azure Cosmos DB instance.
AZURE_COSMOSDB_ENDPOINT=your-azure-cosmosdb-endpoint

# Feature flags
# Set to "false" to disable the ingestion of Copilot seats data. Defaults to "true".
ENABLE_SEATS_INGESTION=true

# Set to "false" to disable the main dashboard feature. Defaults to "true".
ENABLE_DASHBOARD_FEATURE=true

# Set to "false" to disable the seats view feature. Defaults to "true".
ENABLE_SEATS_FEATURE=true

# Development/Testing settings
# Set to "true" to use test data instead of fetching from the GitHub API. Defaults to "false".
# Note: This is represented as GITHUB_METRICS__USETESTDATA in some parts of the code.
GITHUB_METRICS__USETESTDATA=false